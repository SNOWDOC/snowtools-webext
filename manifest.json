{
  "manifest_version": 2,
  "name": "Snow tool belt",
  "version": "1.0",
  "description": "A set of tools for the ServiceNow developpers",
  "homepage_url": "https://github.com/macmorning/snowtools-webext",
  "icons": {
    "48": "icons/tools-48.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "SNOW Toolbelt",
    "default_icon": { "48": "icons/tools-48.png" },
    "default_popup": "snowbelt.html"
  },
  "permissions": ["tabs"]
}