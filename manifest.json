{
  "manifest_version": 2,
  "name": "ServiceNow tool belt",
  "version": "4.1.0",
  "description": "A set of tools for ServiceNow developpers",
  "homepage_url": "https://github.com/macmorning/snowtools-webext",
  "icons": {
    "48": "icons/tools-48.png",
    "128": "icons/tools-128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Open the tools popup"
    },
    "execute-save": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Save current record"
    }
  },
  "background": {
    "scripts": ["background/background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "SNOW Toolbelt",
    "default_icon": {
        "48": "icons/tools-48.png",
        "128": "icons/tools-128.png"
    },
    "default_popup": "dialog/snowbelt.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script/snowbelt-cs.js"]
    }
  ],
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": [
    "tabs", 
    "storage", 
    "cookies",
    "<all_urls>",
    "downloads"
  ],
  "content_security_policy": "default-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "{db3d7d07-a7d3-4d87-9f39-4ef22214acbd}"
    }
  }
}